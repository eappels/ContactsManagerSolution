        <views:ContactsList Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="14" Grid.RowSpan="5"/>
        <views:CRUDInput Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="8" Grid.RowSpan="4" Margin="0,10,0,0"/>
